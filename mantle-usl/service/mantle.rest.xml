<!-- General Guideline Verbs: GET=find, POST=create, PUT=store (create or update), PATCH=update, DELETE=delete  -->

<resource xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/rest-api-1.6.xsd"
        name="mantle" displayName="Mantle Business Artifacts REST API" version="1.2.0">
    <resource name="orders">
        <method type="get"><entity name="orders" masterName="default" operation="list"/></method>
        <method type="post"><service name="mantle.order.OrderServices.create#Order"/></method>
        <method type="put"><service name="mantle.order.OrderBulkServices.store#Order"/></method>

        <id name="orderId">
            <method type="get"><entity name="orders" masterName="default" operation="one"/></method>

            <resource name="parts">
                <method type="post"><service name="mantle.order.OrderServices.create#OrderPart"/></method>

                <id name="orderPartSeqId">
                    <method type="patch"><service name="mantle.order.OrderServices.update#OrderPart"/></method>
                    <!-- TODO <method type="delete"><service name="mantle.order.OrderServices.delete#OrderPart"/></method> -->

                    <resource name="payments">
                        <method type="post"><service name="mantle.order.OrderServices.add#OrderPartPayment"/></method>
                        <!-- TODO get payments, etc -->
                    </resource>
                    <resource name="invoices">
                        <method type="post"><service name="mantle.account.InvoiceServices.create#EntireOrderPartInvoice"/></method>
                        <!-- TODO get invoices, etc -->
                    </resource>
                    <resource name="shipments">
                        <method type="post"><service name="mantle.shipment.ShipmentServices.ship#OrderPart"/></method>
                        <!-- TODO get shipments, etc -->
                        <id name="shipmentId">
                            <method type="post"><service name="mantle.shipment.ShipmentServices.add#OrderPartToShipment"/></method>
                        </id>
                    </resource>
                </id>
            </resource>

            <resource name="items">
                <method type="post"><service name="mantle.order.OrderServices.create#OrderItem"/></method>
                <id name="orderItemSeqId">
                    <method type="patch"><service name="mantle.order.OrderServices.update#OrderItem"/></method>
                    <method type="delete"><service name="mantle.order.OrderServices.delete#OrderItem"/></method>
                </id>
            </resource>
            <resource name="productItems">
                <method type="put"><service name="mantle.order.OrderServices.add#OrderProductQuantity"/></method>
                <id name="orderItemSeqId">
                    <method type="patch"><service name="mantle.order.OrderServices.update#OrderProductQuantity"/></method>
                    <method type="delete"><service name="mantle.order.OrderServices.delete#OrderItem"/></method>
                </id>
            </resource>
            <resource name="shippingBilling"><method type="put">
                <service name="mantle.order.OrderServices.set#OrderBillingShippingInfo"/></method></resource>
            <resource name="propose"><method type="patch">
                <service name="mantle.order.OrderServices.propose#Order"/></method></resource>
            <resource name="place"><method type="patch">
                <service name="mantle.order.OrderServices.place#Order"/></method></resource>
            <resource name="approve"><method type="patch">
                <service name="mantle.order.OrderServices.approve#Order"/></method></resource>
            <resource name="cancel"><method type="patch">
                <service name="mantle.order.OrderServices.cancel#Order"/></method></resource>
        </id>
    </resource>

    <resource name="payments">
        <method type="get"><entity name="payments" masterName="default" operation="list"/></method>
        <method type="post"><service name="mantle.account.PaymentServices.create#Payment"/></method>

        <id name="paymentId">
            <method type="patch"><entity name="mantle.account.payment.Payment" operation="update"/></method>
        </id>
    </resource>

    <resource name="invoices">
        <method type="get"><entity name="invoices" masterName="default" operation="list"/></method>
        <method type="post"><service name="mantle.account.InvoiceServices.create#Invoice"/></method>

        <id name="invoiceId">
            <method type="get"><entity name="invoices" masterName="default" operation="one"/></method>
            <method type="patch"><service name="mantle.account.InvoiceServices.update#Invoice"/></method>
            <resource name="items">
                <method type="post"><service name="mantle.account.InvoiceServices.create#InvoiceItem"/></method>
                <id name="invoiceItemSeqId">
                    <method type="patch"><service name="mantle.account.InvoiceServices.update#InvoiceItem"/></method>
                    <method type="delete"><service name="mantle.account.InvoiceServices.delete#InvoiceItem"/></method>
                </id>
            </resource>
        </id>
    </resource>
</resource>
